<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="nms.wai.001" version="1.0.5">
	<name>WAI</name>
	<description>App from WAI Global</description>
	<author href="www.wai-news.com" email="support@wai-news.com">WAI IT Team</author>
	<content src="index.html"/>
	<!-- IOS Only -->
	<preference name="target-device" value="universal"/>
	<preference name="prerendered-icon" value="true"/>
	<preference name="ios-statusbarstyle" value="black-translucent"/>
	<preference name="detect-data-types" value="true"/>
	<preference name="exit-on-suspend" value="false"/>
	<preference name="EnableViewportScale" value="true"/>
