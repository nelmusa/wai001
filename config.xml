		<splash src="res/screen/ios/iphone-6-port.png" platform="ios" width="1242" height="2208" />
		<!-- iPad -->
		<splash src="res/screen/ios/ipad-port.png" width="768" height="1024" />
		<!-- Retina iPad -->
		<splash src="res/screen/ios/ipad-port-2x.png" width="1536" height="2048" />
	</platform>

	<feature name="InAppBrowser">
	    <param name="ios-package" value="CDVInAppBrowser" />
	</feature>

	<access origin="*"/>
	<plugin name="cordova-plugin-whitelist" version="1"/>
	<allow-intent href="http://*/*"/>
	<allow-intent href="https://*/*"/>
	<allow-intent href="tel:*"/>
	<allow-intent href="sms:*"/>
	<allow-intent href="mailto:*"/>
	<allow-intent href="geo:*"/>

